{
  "name": "backend",
  "version": "0.1.0",
  "description": "Backend API server",
  "main": "dist/api/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/api/index.js",
    "dev": "tsx watch api/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run __tests__/unit",
    "test:integration": "vitest run __tests__/integration",
    "test:e2e": "vitest run __tests__/e2e",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@google/genai": "^0.2.0",
    "axios": "^1.6.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@types/xml2js": "^0.4.14",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  }
}
