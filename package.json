{
  "name": "research-graph-prototype",
  "version": "1.0.0",
  "description": "Research paper discovery through interactive graph visualization",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  },
  "keywords": ["research", "graph", "visualization", "papers"],
  "author": "Vihaan Gupta",
  "license": "MIT"
}
